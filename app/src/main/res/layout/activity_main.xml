<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/b1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"

        app:layout_constraintVertical_bias=".2"
        app:layout_constraintHorizontal_bias=".10"
        android:text=""
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"

        app:layout_constraintStart_toEndOf="@id/b1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="20dp"
        android:id="@+id/b2"
        android:text=""
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"

        app:layout_constraintStart_toEndOf="@id/b2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="20dp"
        android:id="@+id/b3"
        android:text=""
        />

    <Button
        android:id="@+id/b4"
        android:layout_width="100dp"
        android:layout_height="100dp"

        app:layout_goneMarginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b1"
        android:text=""/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"

        app:layout_constraintStart_toEndOf="@id/b4"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/b2"
        android:id="@+id/b5"
        android:text=""
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"

        app:layout_constraintStart_toEndOf="@id/b5"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/b3"
        android:id="@+id/b6"
        android:text=""
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b4"
        android:id="@+id/b7"
        app:layout_constraintHorizontal_bias=".1"
        android:text=""
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"

        app:layout_constraintStart_toEndOf="@id/b7"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/b5"
        android:id="@+id/b8"
        android:text=""
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textFontWeight="50"
        app:layout_constraintStart_toEndOf="@id/b8"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/b6"
        android:id="@+id/b9"
        android:text=""
        />
    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/b8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Jugando"
        />

</androidx.constraintlayout.widget.ConstraintLayout>